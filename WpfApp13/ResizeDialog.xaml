<Window x:Class="TablePlacer.ResizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить размер комнаты" Height="180" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Новая ширина:"/>
        <TextBox x:Name="tbWidth" Margin="0 2"/>
        <TextBlock Text="Новая высота:" Margin="0 5"/>
        <TextBox x:Name="tbHeight" Margin="0 2"/>
        <Button Content="OK" Click="BtnOk_Click" 
                Margin="0 10" Padding="10 3" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>